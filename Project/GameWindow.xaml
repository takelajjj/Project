<Window x:Class="Project.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="GameWindow" Height="470" Width="800">
    <Window.Resources>
        <Style x:Key="WordCell" TargetType="TextBox">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Cascadia Code"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="MaxLength" Value="1"/>
            <Setter Property="CharacterCasing" Value="Upper"/>
        </Style>
    </Window.Resources>
    <Grid>
       

        <StackPanel>
            <Grid x:Name="KeyboardGrid" Height="100" Width="404" Margin="200,160,-100,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Й" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Name="Q" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Ц" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" Name="W"  Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="У" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="1" Name="E"  Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="К" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="1" Name="R"  Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Е" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="1" Name="T" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Н" Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="1" Name="Y"  Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Г" Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="1" Name="U"  Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Ш" Grid.Row="0" Grid.Column="7" Grid.ColumnSpan="1" Name="I"  Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Щ" Grid.Row="0" Grid.Column="8" Grid.ColumnSpan="1" Name="O"  Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="З" Grid.Row="0" Grid.Column="9" Grid.ColumnSpan="1" Name="P"  Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Х" Grid.Row="0" Grid.Column="10" Grid.ColumnSpan="1" Name="EHE"  Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Ъ" Grid.Row="0" Grid.Column="11" Grid.ColumnSpan="1" Name="MYAGIYZNAK"  Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>

                <Button Content="Ф" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Ы" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="В" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="А" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="П" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Р" Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="О" Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Л" Grid.Row="1" Grid.Column="7" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Д" Grid.Row="1" Grid.Column="8" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Ж" Grid.Row="1" Grid.Column="9" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Э" Grid.Row="1" Grid.Column="10" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>


                <Button Content="Я" Grid.Row="2" Grid.Column="0"   Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Ч" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="С" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="М" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="И" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Т" Grid.Row="2" Grid.Column="5" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Ь" Grid.Row="2" Grid.Column="6" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Б" Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>
                <Button Content="Ю" Grid.Row="2" Grid.Column="8" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" FontFamily="Cascadia Code"/>

                <Button Content="Ввод" Grid.Row="2" Grid.Column="9" Grid.ColumnSpan="2" Margin="1,1,1,1" Click="keyboard" Tag="ENTER" FontFamily="Cascadia Code"/>
                <Button Content="del" Grid.Row="2" Grid.Column="11" Grid.ColumnSpan="1" Margin="1,1,1,1" Click="keyboard" Tag="BACK" FontFamily="Cascadia Code"/>

            </Grid>
        </StackPanel>

        <StackPanel Grid.ColumnSpan="3">
            <Button 
                x:Name="ToMenuButton" 
                Height="40" Width="40"  
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Content="X" FontSize="23"
                Click="BackToMenu"/>

            <Grid Margin="3,0,400,400" Height="300" Width="200" Name="WordGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Row="0" Grid.Column="0" Style="{StaticResource WordCell}" Name="Cell_0_0" Margin="1,1,1,1"/>
                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource WordCell}" Name="Cell_0_1" Margin="1,1,1,1"/>
                <TextBox Grid.Row="0" Grid.Column="2" Style="{StaticResource WordCell}" Name="Cell_0_2" Margin="1,1,1,1"/>
                <TextBox Grid.Row="0" Grid.Column="3" Style="{StaticResource WordCell}" Name="Cell_0_3" Margin="1,1,1,1"/>
                <TextBox Grid.Row="1" Grid.Column="0" Style="{StaticResource WordCell}" Name="Cell_1_0" Margin="1,1,1,1"/>
                <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource WordCell}" Name="Cell_1_1" Margin="1,1,1,1"/>
                <TextBox Grid.Row="1" Grid.Column="2" Style="{StaticResource WordCell}" Name="Cell_1_2" Margin="1,1,1,1"/>
                <TextBox Grid.Row="1" Grid.Column="3" Style="{StaticResource WordCell}" Name="Cell_1_3" Margin="1,1,1,1"/>
                <TextBox Grid.Row="2" Grid.Column="0" Style="{StaticResource WordCell}" Name="Cell_2_0" Margin="1,1,1,1"/>
                <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource WordCell}" Name="Cell_2_1" Margin="1,1,1,1"/>
                <TextBox Grid.Row="2" Grid.Column="2" Style="{StaticResource WordCell}" Name="Cell_2_2" Margin="1,1,1,1"/>
                <TextBox Grid.Row="2" Grid.Column="3" Style="{StaticResource WordCell}" Name="Cell_2_3" Margin="1,1,1,1"/>
                <TextBox Grid.Row="3" Grid.Column="0" Style="{StaticResource WordCell}" Name="Cell_3_0" Margin="1,1,1,1"/>
                <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource WordCell}" Name="Cell_3_1" Margin="1,1,1,1"/>
                <TextBox Grid.Row="3" Grid.Column="2" Style="{StaticResource WordCell}" Name="Cell_3_2" Margin="1,1,1,1"/>
                <TextBox Grid.Row="3" Grid.Column="3" Style="{StaticResource WordCell}" Name="Cell_3_3" Margin="1,1,1,1"/>
                <TextBox Grid.Row="4" Grid.Column="0" Style="{StaticResource WordCell}" Name="Cell_4_0" Margin="1,1,1,1"/>
                <TextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource WordCell}" Name="Cell_4_1" Margin="1,1,1,1"/>
                <TextBox Grid.Row="4" Grid.Column="2" Style="{StaticResource WordCell}" Name="Cell_4_2" Margin="1,1,1,1"/>
                <TextBox Grid.Row="4" Grid.Column="3" Style="{StaticResource WordCell}" Name="Cell_4_3" Margin="1,1,1,1"/>
                <TextBox Grid.Row="5" Grid.Column="0" Style="{StaticResource WordCell}" Name="Cell_5_0" Margin="1,1,1,1"/>
                <TextBox Grid.Row="5" Grid.Column="1" Style="{StaticResource WordCell}" Name="Cell_5_1" Margin="1,1,1,1"/>
                <TextBox Grid.Row="5" Grid.Column="2" Style="{StaticResource WordCell}" Name="Cell_5_2" Margin="1,1,1,1"/>
                <TextBox Grid.Row="5" Grid.Column="3" Style="{StaticResource WordCell}" Name="Cell_5_3" Margin="1,1,1,1"/>

            </Grid>

        </StackPanel>
        
    </Grid>
</Window>
